
<div class="container">
  <div class="row article-row">
    <div class="col-sm-10 col-sm-offset-1">
      <% @articles.each do |article| %>
        <article>
          <h2><%= link_to article.title, article_path(article) %></h2>
          <%= article.content %>
        </article>
      <% end %>
    </div>
  </div>
</div>
